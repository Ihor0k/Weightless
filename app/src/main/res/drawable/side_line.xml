<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="90">
    <layer-list>
        <item android:gravity="left">
            <shape android:shape="oval">
                <size
                    android:width="5dp"
                    android:height="5dp" />
                <solid android:color="@color/boardBackground" />
            </shape>
        </item>
        <item android:gravity="center">
            <rotate>
                <shape android:shape="line">
                    <stroke
                        android:width="1dp"
                        android:color="@color/boardBackground" />
                </shape>
            </rotate>
        </item>
        <item
            android:gravity="right">
            <shape android:shape="oval">
                <size
                    android:width="5dp"
                    android:height="5dp" />
                <solid android:color="@color/boardBackground" />
            </shape>
        </item>
    </layer-list>
</rotate>